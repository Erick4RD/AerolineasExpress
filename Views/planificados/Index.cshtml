@model IEnumerable<AerolineaExpress.Models.planificados>

@{
    ViewData["Title"] = "Index";
}

<h1>Tabla de planificacion</h1>

<p>
    <a asp-action="Create">Nueva</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Destino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hora_de_salida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hora_de_llegada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantida_de_pasajeros)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Destino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hora_de_salida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hora_de_llegada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantida_de_pasajeros)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VuelosId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.VuelosId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.VuelosId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
